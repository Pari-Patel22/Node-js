<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>CRUD in Express</title>

<style>
    body{
        font-family: Arial, sans-serif;
        background:#f1f5f9;
        padding:40px;
    }

    h1{
        text-align:center;
        margin-bottom:25px;
    }

    table{
        width:100%;
        max-width:1100px;
        margin:auto;
        border-collapse:collapse;
        background:white;
        border-radius:10px;
        overflow:hidden;
        box-shadow:0 4px 10px rgba(0,0,0,0.05);
    }

    thead{
        background:#0f172a;
        color:white;
    }

    th, td{
        padding:12px;
        text-align:center;
        border-bottom:1px solid #e5e7eb;
    }

    input{
        width:100%;
        padding:8px;
        border-radius:6px;
        border:1px solid #cbd5e1;
        font-size:14px;
    }

    input:focus{
        outline:none;
        border-color:#2563eb;
    }

    button{
        padding:8px 14px;
        border:none;
        border-radius:6px;
        cursor:pointer;
        background:#2563eb;
        color:white;
    }

    button:hover{
        background:#1e40af;
    }

    .edit-btn{
        background:#22c55e;
    }

    .delete-btn{
        background:#ef4444;
    }
</style>
</head>

<body>

<h1>CRUD in Express</h1>

<!-- FORM AS TABLE -->
<form action="/addData" method="post">
<table>
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Date</th>
            <th>Age</th>
            <th>City</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input type="text" name="fullName" required></td>
            <td><input type="email" name="email" required></td>
            <td><input type="date" name="joinDate" required></td>
            <td><input type="number" name="age" required></td>
            <td><input type="text" name="city" required></td>
            <td><button type="submit">Add</button></td>
        </tr>
    </tbody>
</table>
</form>

<br><br>

<!-- DATA TABLE -->
<table>
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Date</th>
            <th>Age</th>
            <th>City</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
    <% data.map((e)=>{ %>
        <tr>
            <td><%= e.fullName %></td>
            <td><%= e.email %></td>
            <td><%= e.joinDate %></td>
            <td><%= e.age %></td>
            <td><%= e.city %></td>
            <td>
                <a href="/editData/?id=<%= e.id %>">
                    <button class="edit-btn">Edit</button>
                </a>
            </td>
            <td>
                <a href="/deleteData/<%= e.id %>">
                    <button class="delete-btn">Delete</button>
                </a>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

</body>
</html>
